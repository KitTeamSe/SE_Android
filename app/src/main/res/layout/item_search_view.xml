<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.se.framework.ui.main.search.SearchItemViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{()-> viewModel.onItemClick()}"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/bottomborder"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.title}"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold">
        </TextView>
        <TextView
            android:id="@+id/contentsTextView"
            style="@style/boardSubTextView"
            android:text="@{viewModel.previewText}"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:ems="18"
            android:maxLines="1"
            android:ellipsize="end"
            >
        </TextView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/timeTextView"
                style="@style/boardSubTextView"
                android:text="@{viewModel.createAt}"
                android:textSize="12dp"
                android:textColor="@color/black">
            </TextView>
            <TextView
                style="@style/boardSubTextView"
                android:text="|"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:textSize="12dp"
                android:textColor="@color/black">
            </TextView>
            <TextView
                android:id="@+id/nameTextView"
                style="@style/boardSubTextView"
                android:text="@{viewModel.nickname}"
                android:textSize="12dp"
                android:textColor="@color/black">
            </TextView>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1">
            </View>
            <ImageView
                android:id="@+id/imageView"
                style="@style/boardSubTextView"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_baseline_comment_24"
                android:textSize="12dp"
                android:tint="@color/mainblue"/>
            <TextView
                android:id="@+id/commentsTextView"
                style="@style/boardSubTextView"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:text="@{viewModel.numReply}"
                android:textSize="12dp"
                android:textColor="@color/black">
            </TextView>
        </LinearLayout>
    </LinearLayout>
</layout>